<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="AppController">
   <children>
      <AnchorPane fx:id="pane" prefHeight="360.0" prefWidth="640.0">
         <children>
            <MediaView fx:id="mediaView" fitHeight="300.0" fitWidth="640.0" />
            <Button fx:id="playButton" layoutX="60.0" layoutY="320.0" mnemonicParsing="false" onAction="#playMedia" prefWidth="100.0" text="PLAY" />
            <Button fx:id="pauseButton" layoutX="288.0" layoutY="320.0" mnemonicParsing="false" onAction="#pauseMedia" prefWidth="100.0" text="PAUSE" />
            <Button fx:id="resetButton" layoutX="480.0" layoutY="320.0" mnemonicParsing="false" onAction="#resetMedia" prefWidth="100.0" text="RESET" />
         </children>
      </AnchorPane>
   </children>   
</VBox>
